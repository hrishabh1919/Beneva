<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f8e9">

    <!-- Top Green Curved Background -->
    <RelativeLayout
        android:id="@+id/top_section"
        android:layout_width="match_parent"
        android:layout_height="340dp"
        android:background="#5CC35E"
        android:clipToOutline="true"
        tools:targetApi="31">
        <!-- You may use a custom drawable for the curved effect or use a vector/shape background -->

        <!-- App Name and Tagline -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="30dp"
            android:layout_marginStart="24dp"
            tools:ignore="UselessParent">

            <TextView
                android:id="@+id/app_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/beneva"
                android:textColor="#FFFFFF"
                android:textSize="28sp"
                android:textStyle="bold"
                tools:ignore="TextContrastCheck" />

        </LinearLayout>

    </RelativeLayout>

    <!-- White Card for Login Form -->
    <LinearLayout
        android:id="@+id/login_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/top_section"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:padding="32dp"
        android:layout_marginTop="-80dp"
        android:layout_marginBottom="0dp"
        android:elevation="8dp"
        android:clipToOutline="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        tools:targetApi="31">

        <!-- Login Title -->
        <TextView
            android:id="@+id/login_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login"
            android:textColor="#212121"
            android:textStyle="bold"
            android:textSize="24sp"
            android:layout_marginBottom="24dp" />

        <!-- Email Field -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:background="@drawable/rounded_edittext_bg"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:contentDescription="@string/email_icon"
                android:src="@drawable/ic_email"
                app:tint="#212121" />

            <EditText
                android:id="@+id/email_field"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:autofillHints=""
                android:background="@android:color/transparent"
                android:hint="@string/admin_email_com"
                android:inputType="textEmailAddress"
                android:minHeight="48dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:textColor="#212121"
                android:textSize="16sp"
                tools:ignore="VisualLintTextFieldSize" />
        </LinearLayout>

        <!-- Password Field -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:background="@drawable/rounded_edittext_bg"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <ImageView
                android:layout_height="wrap_content"
                android:layout_width="35dp"
                android:contentDescription="@string/password"
                android:src="@drawable/ic_lock"
                app:tint="#212121" />

            <EditText
                android:id="@+id/password_field"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:autofillHints=""
                android:background="@android:color/transparent"
                android:hint="@string/login_password"
                android:inputType="textPassword"
                android:minHeight="48dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:textColor="#212121"
                android:textSize="16sp"
                tools:ignore="VisualLintTextFieldSize,DuplicateSpeakableTextCheck" />
        </LinearLayout>

        <!-- Enter Button -->
        <Button
            android:id="@+id/enter_button"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="@string/enter"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:backgroundTint="#4caf50"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/rounded_button_bg"
            tools:ignore="VisualLintButtonSize" />
    </LinearLayout>
</RelativeLayout>
